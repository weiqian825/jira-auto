{
  "version": "0.0.1",
  "name": "jira-auto",
  "manifest_version": 2,
  "description": "jira-auto",
  "browser_action": {
    "default_title": "jira-auto",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "cookies", 
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
